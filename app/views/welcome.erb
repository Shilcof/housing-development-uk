<section class="jumbotron jumbotron-fluid text-center">
  <br><br><br><br>
  <div class="container">
    <h1>Welcome to Housing Development UK.</h1>
      <p class="lead my-3">To view the latest developments and leave comments, please sign up or log in.</p>
  </div>
  <br><br><br><br>
</section>

<div class="album pt-4 bg-white">
  <div class="container">
    <div class="card-deck">
      <% @developments.slice(-3,3).reverse.each do |development| %>
        <div class="card mb-4 bg-light shadow-sm" style="min-width: 18rem;">
          <!--
          <img class="card-img-top rounded" src="{{ job.image.url }}" />
          -->
          <div class="card-body">
              <h4 class="card-heading"><%= development.title %></h4>
              <h5 class="card-title text-muted"><%= development.developer.company %></h5>
              <p class="card-text"><%= development.summary %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
