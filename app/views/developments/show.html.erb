<br/>
<main role="main">
  <div class="container">

    <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
      <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic"><%= @development.title %></h1>
        <p class="lead my-3"><%= @development.developer.company %></p>
        <!--
        <p class="lead my-3">@development.address</p>
        -->
      </div>
    </div>

    <!--
    <img class="img-fluid rounded" src="" />
    -->
    <p><%= @development.content.gsub("\r\n\r\n","<br><br>") %></p>
    <br/>
    <% if current_developer? %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <form method="GET" action="/developments/<%= @development.slug %>/edit">
            <button type="submit" class="btn btn-primary centre">Edit development.</button>
          </form>
        </div>
        <div class="form-group col-md-6">
          <form method="POST" action="/developments/<%= @development.slug %>">
            <input type=hidden name="_method" value="DELETE">
            <button type="submit" class="btn btn-primary centre">Delete development.</button>
          </form>
        </div>
      </div>
    <% end %>
  </div>
</main>